#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Check if any relevant files have been changed
# Only run pipeline checks if JS/JSX/TS/TSX files or config files are modified
CHANGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|jsx|ts|tsx|json|yml|yaml)$' || true)

if [ -z "$CHANGED_FILES" ]; then
  echo "No relevant files changed, skipping pipeline checks..."
  exit 0
fi

echo "üîç Running pipeline checks for changed files..."
echo "Changed files: $CHANGED_FILES"

# Run the full pipeline test
pnpm run test:pipeline